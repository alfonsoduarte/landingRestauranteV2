<style>
  .location-section {
    background-color: var(--color-white);
  }

  .location-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--spacing-xl);
    align-items: stretch;
  }

  .location-map {
    border-radius: var(--radius-lg);
    overflow: hidden;
    min-height: 450px;
    box-shadow: var(--shadow-lg);
  }

  .location-map iframe {
    display: block;
  }

  .location-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .info-card {
    display: flex;
    gap: var(--spacing-md);
    padding: var(--spacing-md);
    background-color: var(--color-cream);
    border-radius: var(--radius-md);
    transition: transform var(--transition-fast);
  }

  .info-card:hover {
    transform: translateX(4px);
  }

  .info-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .info-content h3 {
    font-size: 1.1rem;
    margin-bottom: var(--spacing-xs);
    color: var(--color-black);
  }

  .info-content p {
    color: var(--color-gray);
    font-size: 0.95rem;
    margin-bottom: 4px;
  }

  .info-content a {
    color: var(--color-primary);
    transition: color var(--transition-fast);
  }

  .info-content a:hover {
    color: var(--color-accent);
  }

  .info-link {
    display: inline-block;
    margin-top: var(--spacing-xs);
    font-weight: 500;
    font-size: 0.9rem;
  }

  .schedule-list {
    list-style: none;
  }

  .schedule-list li {
    display: flex;
    justify-content: space-between;
    padding: 6px 0;
    font-size: 0.9rem;
    color: var(--color-gray);
    border-bottom: 1px dashed var(--color-light);
  }

  .schedule-list li:last-child {
    border-bottom: none;
  }

  .schedule-list li span:last-child {
    font-weight: 500;
    color: var(--color-dark);
  }

  .social-links {
    padding: var(--spacing-md);
    background-color: var(--color-cream);
    border-radius: var(--radius-md);
    text-align: center;
  }

  .social-links h4 {
    font-size: 1rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-black);
  }

  .social-icons {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
  }

  .social-link {
    width: 44px;
    height: 44px;
    background-color: var(--color-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    transition: all var(--transition-fast);
  }

  .social-link:hover {
    background-color: var(--color-primary);
    color: var(--color-white);
    transform: translateY(-3px);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
  }

  /* Footer */
  .footer {
    background-color: var(--color-black);
    color: var(--color-white);
    padding: var(--spacing-xl) 0;
  }

  .footer-content {
    text-align: center;
  }

  .footer-brand {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-xs);
    margin-bottom: var(--spacing-sm);
  }

  .footer-logo {
    font-size: 2rem;
  }

  .footer-name {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
  }

  .footer-tagline {
    color: var(--color-secondary);
    margin-bottom: var(--spacing-md);
  }

  .footer-copyright {
    font-size: 0.85rem;
    opacity: 0.7;
  }

  @media (max-width: 900px) {
    .location-grid {
      grid-template-columns: 1fr;
    }

    .location-map {
      min-height: 350px;
    }
  }
</style>
